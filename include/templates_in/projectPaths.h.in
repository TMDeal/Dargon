#ifndef PROJECTPATHS_H_IN
#define PROJECTPATHS_H_IN

#include <string>

#ifdef _WIN32
    const char PATH_SEP = '\\';
#else
    const char PATH_SEP = '/';
#endif

static std::string getBasePath(const std::string &subdir = ""){
    std::string resDir = "@Dargon_SOURCE_DIR@";
    resDir += PATH_SEP;

    return subdir.empty() ? resDir : resDir + subdir + PATH_SEP;
}

static std::string getResPath(const std::string &subdir = ""){
    std::string resDir = getBasePath() + "res" + PATH_SEP;
    return subdir.empty() ? resDir : resDir + subdir + PATH_SEP;
}

#endif /* PROJECTPATHS_H_IN */
